<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Information sur le compte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/information"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/nom"
        android:layout_alignStart="@+id/nom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/prenom"
        android:hint="PrÃ©nom :"
        android:layout_below="@+id/nom"
        android:layout_alignLeft="@+id/nom"
        android:layout_alignStart="@+id/nom" />

    <Button
        android:text="Modifier mot de passe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boutonmdp"
        android:layout_below="@+id/adresse"
        android:layout_alignLeft="@+id/adresse"
        android:layout_alignStart="@+id/adresse"
        android:layout_marginTop="22dp" />

    <Button
        android:text="Enregistrer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enregistrer"
        android:layout_alignBaseline="@+id/boutonmdp"
        android:layout_alignBottom="@+id/boutonmdp"
        android:layout_toRightOf="@+id/adresse"
        android:layout_toEndOf="@+id/adresse" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/adresse"
        android:layout_below="@+id/dateNaiss"
        android:layout_alignLeft="@+id/dateNaiss"
        android:layout_alignStart="@+id/dateNaiss" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/dateNaiss"
        android:hint="Date de naissance :"
        android:layout_below="@+id/prenom"
        android:layout_alignLeft="@+id/prenom"
        android:layout_alignStart="@+id/prenom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="31dp"
        android:id="@+id/nom"
        android:hint="Nom :"
        android:layout_below="@+id/information"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>