<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_verification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.walkcompany.neverwalkalone.VerificationActivity"
    tools:showIn="@layout/activity_verification"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="147dp"
            app:srcCompat="@drawable/letter"
            android:id="@+id/imageView"
            android:layout_weight="0.15" />

        <TextView
            android:text="Hop hop hop ! allez vérifier vos emails, on a une suprise pour vous (un email de validation)."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="0.15"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginTop="10sp" />

        <Button
            android:text="Mais, j'ai rien reçu."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/renvoi"
            android:layout_weight="0.06"
            android:background="@color/white"
            android:textColor="@color/colorPrimary" />

        <Button
            android:text="C'est validé, je peux continuer ?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/valide"
            android:background="@android:color/white"
            android:layout_marginTop="15sp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="0.06" />

    </LinearLayout>
</RelativeLayout>
